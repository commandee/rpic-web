---
import Nav from "../components/Nav.astro";
import Layout from "./Layout.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <header>
    <Nav />
  </header>

  <div>
    <slot />
  </div>

  <Footer class="footer" />
</Layout>

<style lang="scss">
  div {
    padding: 1.5rem;
    margin-bottom: auto;
  }
</style>
