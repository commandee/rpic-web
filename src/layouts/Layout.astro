---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="pt">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style lang="scss" is:global>
  @use "../style/reset";
  @import url("https://fonts.googleapis.com/css2?family=Mulish:ital,wght@0,200;0,400;0,500;0,700;0,900;1,200;1,400;1,700;1,900&display=swap");
</style>

<style lang="scss">
  @use "../style/utils.scss";

  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      white 60%
    );
    margin: 0;
    padding: 0;
    border: 0;
  }

  Layout {
    margin: 0;
    border: 0;
  }

  html {
    // font-family: system-ui, sans-serif;
    background-color: #f6f6f6;
  }
</style>
