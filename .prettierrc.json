{
    "trailingComma": "none",
    "singleQuote": false,
    "bracketSameLine": true,
    "endOfLine": "lf",
    "bracketSpacing": true,
    "useTabs": false,
    "arrowParens": "always",
    "tabWidth": 4,
    "editorconfig": true,
    "semi": true,
    "overrides": [
        {
            "files": ["*.json", "*.yml", "*.yaml", "*.toml"],
            "options": {
                "singleQuote": false
            }
        },
        {
            "files": ["*.html", "*.astro", "*.css", "*.scss"],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}